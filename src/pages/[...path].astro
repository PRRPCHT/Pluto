---
import Layout from '../layouts/Layout.astro';
import Lightbox from '../components/Lightbox.astro';
import { getAllGalleryPaths, getGalleryData, getGalleryConfig, DescriptionPosition, GalleryElementAlignment, GalleryStyle } from '../utils/galleryUtils';
import { marked } from 'marked';

export async function getStaticPaths() {
  const paths = getAllGalleryPaths();
  
  return paths.map(path => ({
    params: { 
      path: path === '/' ? undefined : path.slice(1) // Remove leading slash for non-root
    }
  }));
}

const { path } = Astro.params;
const galleryPath = path ? `/${path}` : '/';
const galleryData = getGalleryData(galleryPath);
const galleryConfig = getGalleryConfig();

// Get base URL from Astro environment
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, ''); // Remove trailing slash

// Helper function to add base URL to paths
const withBase = (path: string) => {
  if (!path) return baseUrl || '/';
  if (path === '/') return baseUrl || '/';
  return `${baseUrl}${path}`;
};

// Convert markdown to HTML if description exists
const descriptionHtml = galleryData.description ? marked(galleryData.description) : '';

// Transform images to include base URL for the Lightbox
const imagesWithBase = galleryData.images.map(image => ({
  ...image,
  path: withBase(image.path)
}));
---

<Layout title={`Gallery ${galleryData.currentPath === '/' ? '' : `- ${galleryData.breadcrumbs[galleryData.breadcrumbs.length - 1].name}`}`}>
  <!-- Breadcrumbs for navbar (visible on lg+ screens only) -->
  <nav slot="breadcrumbs-navbar" class="flex flex-wrap items-center">
    {galleryData.parentPath !== null && (
      <a href={withBase(galleryData.parentPath)} class="link hover:text-primary no-underline me-4">
        &larr;
      </a>
    )}

    {galleryData.breadcrumbs.map((crumb, index) => (
      <>
        {index === galleryData.breadcrumbs.length - 1 ? (
          <span class="font-semibold">{crumb.name}</span>
        ) : (
          <>
            <a href={withBase(crumb.path)} class="link hover:text-primary no-underline">
              {crumb.name}
            </a>
            <span class="mx-2 opacity-40">/</span>
          </>
        )}
      </>
    ))}
  </nav>

  <div class="container-fluid mx-auto px-2 md:px-4 py-4">
    <!-- Breadcrumbs (visible only on smaller screens) -->
    <nav class="flex lg:hidden flex-wrap items-center mb-6">
      {galleryData.parentPath !== null && (
        <a href={withBase(galleryData.parentPath)} class="link hover:text-primary no-underline me-4">
          &larr;
        </a>
      )}
      {galleryData.parentPath == null && (
        <span class="me-4 opacity-20">
          &larr;  
        </span>
      )}
      {galleryData.breadcrumbs.map((crumb, index) => (
        <>
          {index === galleryData.breadcrumbs.length - 1 ? (
            <span class="font-semibold">{crumb.name}</span>
          ) : (
            <>
              <a href={withBase(crumb.path)} class="link hover:text-primary no-underline">
                {crumb.name}
              </a>
              <span class="mx-2 opacity-40">/</span>
            </>
          )}
        </>
      ))}
    </nav>

    <!-- Back button 
    {galleryData.parentPath !== null && (
      <div class="mb-6">
        <a href={`${galleryData.parentPath}`} class="btn btn-soft btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back
        </a>
      </div>
    )}-->

    <!-- Folders Section -->
    {galleryData.folders.length > 0 && (
      <div class="mb-8">
        {/* <h2 class="text-2xl font-bold mb-4">Folders</h2> */}
        <div class="flex flex-wrap gap-4 flex-row justify-center">
          {galleryData.folders.reverse().map(folder => (
            <a href={withBase(folder.path)} class="card bg-base-200 hover:bg-base-300 transition-colors shadow-lg hover:shadow-xl w-full sm:w-64">
              <figure class="aspect-video sm:aspect-square bg-base-300 relative overflow-hidden">
                {folder.thumbnail ? (
                  <img 
                    src={withBase(folder.thumbnail)} 
                    alt={folder.name}
                    class="w-full h-full object-cover"
                  />
                ) : (
                  <div class="flex items-center justify-center w-full h-full">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 opacity-30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                    </svg>
                  </div>
                )}
              </figure>
              <div class="card-body py-2 px-1">
                <h3 class="font-bold text-sm text-center">{folder.name}</h3>
                <div class="text-sm text-gray-500 text-center">{folder.count ? `${folder.count} photo${folder.count > 1 ? 's' : ''}` : 'No photos'}</div>
              </div>
            </a>
          ))}
        </div>
      </div>
    )}
  {galleryData.images.length > 0 && galleryData.folders.length > 0 && (
    <div class="divider w-80 mx-auto mb-8 divide-gray-700"></div>
  )}

    <!-- Description Section if on top -->
    {galleryConfig.description_position === DescriptionPosition.Top && galleryData.description && (
      <div class="mb-6 prose prose-sm" class:list={[galleryConfig.description_alignment === GalleryElementAlignment.Center ? 'max-w-3xl mx-auto' : galleryConfig.description_alignment === GalleryElementAlignment.Left ? '' : 'max-w-3xl ms-auto']}>
        <div set:html={descriptionHtml} />
      </div>
    )}

    <!-- Images Section -->
    {galleryData.images.length > 0 && (
      <div class="flex flex-wrap mb-8" 
      class:list={[galleryConfig.gallery_alignment === GalleryElementAlignment.Center ? 'justify-center' : galleryConfig.gallery_alignment === GalleryElementAlignment.Left ? 'justify-start' : 'justify-end',
        galleryConfig.gallery_style === GalleryStyle.Large ? 'flex-col max-w-3xl mx-auto gap-4' : 'flex-row gap-2']}>
        {galleryData.images.map((image, index) => (
          <div class="relative group cursor-pointer overflow-hidden rounded-xs shadow-lg hover:shadow-xl transition-shadow" class:list={[galleryConfig.gallery_style === GalleryStyle.Large ? 'md:max-w-3xl md:mx-auto' : '']}>
            <a href={withBase(image.path)} data-lightbox-trigger data-image-index={index}>
              <img 
                src={withBase(image.path)} 
                alt={image.name}
                class="w-full h-auto  object-cover group-hover:scale-110 transition-transform duration-300"
                class:list={[galleryConfig.gallery_style === GalleryStyle.Large ? 'md:max-w-3xl md:mx-auto' : 'md:h-64 md:w-auto']}
                loading="lazy"
              />
              <div class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition-all duration-300 flex flex-col items-center justify-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
                </svg>
                <p class="text-white text-sm mt-2 px-2 text-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 max-w-3xl truncate">
                  {image.name}
                </p>
              </div>
            </a>
          </div>
        ))}
      </div>
    )}

    <!-- Description Section if on bottom -->
    {galleryConfig.description_position === DescriptionPosition.Bottom && galleryData.description && (
      <div class="mb-6 prose prose-sm" class:list={[galleryConfig.description_alignment === GalleryElementAlignment.Center ? 'max-w-3xl mx-auto' : '']}>
        <div set:html={descriptionHtml} />
      </div>
    )}

    <!-- Empty state -->
    {galleryData.folders.length === 0 && galleryData.images.length === 0 && (
      <div class="text-center py-16">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 mx-auto opacity-20 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <p class="text-lg opacity-60">This folder is empty</p>
      </div>
    )}
  </div>

  <!-- Lightbox -->
  {galleryData.images.length > 0 && (
    <Lightbox images={imagesWithBase} />
  )}
</Layout>

